<button id="downloadbutton">stop and download your recording</button>


<a id="actualdownload">

</a>
<script>
console.log("h!!!i")
screenrecordingstart.onclick=function() {


	navigator.mediaDevices.getUserMedia(
{
video:true,audio:true
}
).then(function(webcamrecordinfo){
	navigator.mediaDevices.getDisplayMedia(
	{
video:true
}
).then(function(screenrecorddata) {
	webcamrecordoutput.srcObject=webcamrecordinfo
	//webcamrecordoutput.requestPictureInPicture()
	webcamrecordinfo.getAudioTracks().forEach(function(track){
	screenrecorddata.addTrack(track)
})
	screenrecordoutput.srcObject=screenrecorddata
	var actualstartrecordingscreen=new MediaRecorder(screenrecorddata)
	actualstartrecordingscreen.start()
downloadbutton.onclick=function(){
actualstartrecordingscreen.stop()
}
	actualstartrecordingscreen.ondataavailable=function(info){
	actualdownload.href=URL.createObjectURL(info.data)
	actualdownload.download="zalmanisthebestest.mp4"
	actualdownload.click()
}
})})
}
startwebcamrecord.onclick=function()
{
	navigator.mediaDevices.getUserMedia(
{video:true,audio:true}

).then(function(scammingmorepeople) {

webcamrecordoutput.srcObject=scammingmorepeople
	var iamscammingyou=new MediaRecorder(scammingmorepeople)
downloadbutton.onclick=function(){
iamscammingyou.stop()
}
iamscammingyou.start()
iamscammingyou.ondataavailable=function(scam){
actualdownload.href=
URL.createObjectURL(scam.data)
actualdownload.download="zalmanisthebest.mp4"
actualdownload.click()


}

})


}


</script><div id="chroma"class="hiddenchroma">
<input type=file id=p><br><button id="export_audio">export audio</button>,
<video autoplay controls id=t></video>
<script>
	export_audio.onclick=function(){
	mediaRecorder=new MediaRecorder
}
p.onchange = e => {
	t.src = URL.createObjectURL(e.target.files[0]);
	t.play();
};
</script>
</div>

